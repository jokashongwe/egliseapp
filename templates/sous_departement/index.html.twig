{% extends 'root.html.twig' %}

{% block title %}Hello DepartementController!
{% endblock %}

{% block stylesheets %}

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
{% endblock %}


{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}


	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<form method="POST" action="{{path('Creation_Sousdepartement')}}" id="contactForm " name="contactForm " class="contactForm ">
					<h2 class="text-center mb-4">Création Sous-Département</h2>


					<div class="form-group">

						<label class="label" for="name">Département attaché</label>
						<select class="form-select" name="departement">

							<option value="">Selectionner le département attaché</option>

							{% for item in departement %}
								<option value="{{item.id}}">{{item.nom}}</option>
							{% endfor %}
						</select>
					</div>
					<div class="form-group">
						<label for="nom">Nom Sous-Département :</label>
						<input type="text" class="form-control" id="nom" name="nom" required>
					</div>

					<button type="submit" class="btn btn-success btn-block">Enregistrer</button>
				</form>
			</div>
		</div>
	</div>

	<!-- Ajoutez jQuery et Popper.js avant Bootstrap JavaScript -->

	{% for message in app.flashes('notification') %}

		<div class="toast show" role="alert" id="toast1" data-delay="5000" style="position: absolute; top: 1rem; right: 1rem; min-width:250px;" aria-live="assertive" aria-atomic="true">
			<div class="toast-header">
				<strong class="me-auto">Message</strong>
				<small></small>
				<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Fermer" onclick="fermer()">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="toast-body">
				<p class="text-danger">{{message}}</p>
			</div>
		</div>
	{% endfor %}
{% endblock %}
